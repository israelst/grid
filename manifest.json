{

    "manifest_version": 2,
    "name": "Grid",
    "version": "1.0",
    "description": "Show a grid based on the font size of the root element.",
    "icons": {
        "48": "icons/grid.svg"
    },

    "applications": {
        "gecko": {
            "id": "grid@mozilla.org",
             "strict_min_version": "46.0"
        }
    },

    "browser_action": {
        "default_icon": "icons/grid.svg",
        "default_title": "Show Grid",
        "default_popup": "popup.html"
    },

    "permissions": [
        "activeTab"
    ]

}
